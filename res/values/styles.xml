<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="MyTheme">
		<item name="android:windowBackground">@drawable/background_white</item>
		<item name="android:textColorPrimary">#000000</item>
		<item name="android:textColorSecondary">#000000</item>
	</style>

	<drawable name="background_white">#ffffff</drawable>
	<drawable name="background_gray">#dddddd</drawable>

<!--	<style name="tableText">-->
<!--		<item name="android:textSize">14sp</item>-->
<!--		<item name="android:textColor">#ff0000</item>-->
<!--	</style>-->
	
	<style name="tableHeader">
		<item name="android:background">#f70</item>
		<item name="android:textColor">#77f</item>
	</style>
	
	<color name="tableTextColor">#000</color>
	<color name="tableBorderColor">#C6C7C6</color>
	<color name="tableBackground">#fff</color>
	<color name="tableDateBackground">#E9EEFD</color>
	
	<!-- DayView -->
	<dimen name="tableTextSize">12sp</dimen>
	<dimen name="tableWindTextSize">10sp</dimen>
	<color name="tableTempColor">#F60</color>
	<color name="tableRainColor">#08F</color>
	<color name="tableHumidColor">#090</color>
	<dimen name="dayTableImageSize">30dip</dimen>
	
	<style name="dayTable">
		<item name="android:background">#C6C6C6</item>
		<item name="android:paddingLeft">1px</item>
	</style>
	
	<style name="dayTableCell">
		<item name="android:textColor">#000</item>
		<item name="android:textSize">13sp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:layout_width">0px</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_weight">1</item>
		<item name="android:includeFontPadding">false</item>
	</style>
	
	<!-- テーブルの最初の行 -->
	<style name="dayTableTop" parent="@style/dayTableCell">
		<item name="android:background">#E9EEFD</item>
		<item name="android:layout_marginTop">1px</item>
		<item name="android:layout_marginRight">1px</item>
		<item name="android:layout_marginBottom">1px</item>
		<item name="android:textSize">12sp</item>
	</style>

	<style name="dayTableTopLeft" parent="@style/dayTableCell">
		<item name="android:background">#EEE</item>
		<item name="android:layout_marginTop">1px</item>
		<item name="android:layout_marginRight">1px</item>
		<item name="android:layout_marginBottom">1px</item>
	</style>

	<style name="dayTableData" parent="@style/dayTableCell">
		<item name="android:background">#fff</item>
		<item name="android:layout_marginRight">1px</item>
		<item name="android:layout_marginBottom">1px</item>
	</style>
	
	<!-- 「晴れ・曇り」の文字 -->
	<style name="dayTableDataWeather">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:textSize">12sp</item>
		<item name="android:gravity">center</item>
	</style>

	<!-- 温度の文字色 -->
	<style name="dayTableDataTemp" parent="@style/dayTableData">
		<item name="android:textColor">#F60</item>
		<item name="android:textSize">15sp</item>
	</style>
	
	<!-- 湿度の文字色 -->
	<style name="dayTableDataHumid" parent="@style/dayTableData">
		<item name="android:textColor">#090</item>
		<item name="android:textSize">15sp</item>
	</style>
	
	<!-- 風の色 -->
	<style name="dayTableDataWind" parent="@style/dayTableData">
		<item name="android:textSize">12sp</item>
	</style>
	
	<color name="pastHourBackgroundColor">#EEE</color>
	<color name="pastHourColor">#999</color>
	<color name="maxTempColor">#F30</color>
	<color name="minTempColor">#06F</color>
	
	
	<style name="dayTableDataText">
		<item name="android:textColor">#090</item>
	</style>
	<drawable name="dayTableDataBackground">#fff</drawable>

	<!-- Widget -->
	<style name="wTextBase">
		<item name="android:textSize">10sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#000</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
	</style>
	
	<style name="wTitle" parent="@style/wTextBase">
		<item name="android:textColor">#bbb</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="wColumn" parent="@style/wTextBase">
		<item name="android:orientation">vertical</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_height">fill_parent</item>
	</style>
	
	<style name="wHour" parent="@style/wTextBase">
		<item name="android:textColor">#eee</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="wImg">
		<item name="android:layout_gravity">center</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
</resources>
