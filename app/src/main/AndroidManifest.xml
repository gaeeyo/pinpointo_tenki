<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="nikeno.Tenki"
          android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <!--<uses-permission android:name="android.permission.WAKE_LOCK" />-->

    <application
        android:name="nikeno.Tenki.TenkiApp"
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/MyTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="AreaSelectActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/area_select_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity
            android:name="HelpActivity"
            android:label="@string/help_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <!-- Widget Provider -->
        <receiver android:name="TenkiWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_info"/>
        </receiver>

        <!-- Widgetを更新するサービス -->
        <service android:name=".service.WidgetUpdateService"/>

        <activity android:name=".activity.TenkiWidgetConfigure">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE"/>
            </intent-filter>
        </activity>


        <service
            android:name=".service.MyJobService"
            android:permission="android.permission.BIND_JOB_SERVICE"/>
    </application>

    <!--
		<uses-permission
		android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>





    -->

</manifest>