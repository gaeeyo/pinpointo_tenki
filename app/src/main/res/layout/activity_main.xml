<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fadingEdge="none"
            tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/marginHeight"
        android:paddingLeft="@dimen/marginWidth"
        android:paddingRight="@dimen/marginWidth"
        android:paddingTop="@dimen/marginHeight">


        <!-- 今日の天気 -->
        <TextView
            android:id="@+id/todayHeader"
            style="@style/sectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"/>

        <nikeno.Tenki.view.TextTableView
            android:id="@+id/today2"
            style="@style/weatherTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 明日の天気 -->

        <TextView
            android:id="@+id/tomorrowHeader"
            style="@style/sectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_marginTop="@dimen/marginHeight"/>

        <nikeno.Tenki.view.TextTableView
            android:id="@+id/tomorrow2"
            style="@style/weatherTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- 週間天気 -->

        <TextView
            android:id="@+id/weekHeader"
            style="@style/sectionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dip"
            android:layout_marginTop="@dimen/marginHeight"
            android:text="@string/weekly_text"/>

        <nikeno.Tenki.view.TextTableView
            android:id="@+id/week2"
            style="@style/weatherTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/main_footer"/>
    </LinearLayout>

</ScrollView>