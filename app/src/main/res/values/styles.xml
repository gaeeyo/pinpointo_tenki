<?xml version="1.0" encoding="utf-8" ?>
<resources
    >

    <style name="BaseTheme" parent="@android:style/Theme.Light">

    </style>

    <style name="BaseTheme.Dark" parent="@android:style/Theme">

    </style>

    <color name="window_background_color_light">#f7f7f7</color>
    <color name="window_background_color_dark">#000</color>
    <color name="primary_text_color_dark">#bbbbbb</color>

    <style name="MyTheme" parent="@style/BaseTheme">
        <item name="android:windowBackground">@color/window_background_color_light</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorSecondary">#ff000000</item>

        <item name="weatherTableStyle">@style/weatherTable</item>
        <item name="colorTempText">#F60</item>
        <item name="colorHumidityText">#090</item>
        <item name="colorTableDateBackground">#E9EEFD</item>
        <item name="colorTableDateBackgroundDisabled">#EEE</item>
        <item name="colorTableTextDisabled">#999</item>
        <item name="colorMaxTempText">#F30</item>
        <item name="colorMinTempText">#06F</item>
        <item name="weatherIconAlpha">255</item>
    </style>

    <style name="MyTheme.Dark" parent="@style/BaseTheme.Dark">
        <item name="android:windowBackground">@color/window_background_color_dark</item>
        <item name="android:textColorPrimary">@color/primary_text_color_dark</item>

        <item name="weatherTableStyle">@style/weatherTable.Dark</item>
        <item name="colorTempText">#CC7832</item>
        <item name="colorHumidityText">#629755</item>
        <item name="colorTableDateBackground">#343E52</item>
        <item name="colorTableDateBackgroundDisabled">#2B2B2B</item>
        <item name="colorTableTextDisabled">#808080</item>
        <item name="colorMaxTempText">#D96858</item>
        <item name="colorMinTempText">#589DF6</item>
    </style>

    <color name="errorMessageBackgroundColor">#aa000000</color>
    <color name="errorMessageTextColor">#ffffffff</color>
    <color name="accentColor">#40C4FF</color>

    <style name="weatherTable">
        <item name="android:background">#fff</item>
        <item name="borderColor">#AAA</item>
        <item name="borderWidth">@dimen/tableBorderWidth</item>
        <item name="cellPadding">@dimen/tableCellPadding</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="weatherTable.Dark">
        <item name="android:background">#131313</item>
        <item name="borderColor">#4D4D4D</item>
        <item name="android:textColor">#BBBBBB</item>
        <item name="iconAlpha">170</item>
    </style>

    <!-- Widget -->
    <style name="wTextBase">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="wTitle" parent="@style/wTextBase">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wColumn" parent="@style/wTextBase">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="wHour" parent="@style/wTextBase">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wImg">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="sectionHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
