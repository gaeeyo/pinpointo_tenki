<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="BaseTheme" parent="@android:style/Theme.Light">

    </style>

    <style name="MyTheme" parent="@style/BaseTheme">
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:textColorSecondary">#ff000000</item>
    </style>

    <color name="windowBackgroundColor">#f7f7f7</color>
    <color name="tableTextColorDisabled">#999</color>
    <color name="tableBorderColor">#AAA</color>
    <color name="tableBackgroundColor">#fff</color>
    <color name="tableDateBackgroundColor">#E9EEFD</color>
    <color name="tableDateBackgroundColorDisabled">#EEE</color>
    <color name="tempTextColor">#F60</color>
    <color name="maxTempTextColor">#F30</color>
    <color name="minTempTextColor">#06F</color>
    <color name="humidityTextColor">#090</color>
    <color name="errorMessageBackgroundColor">#aa000000</color>
    <color name="errorMessageTextColor">#ffffffff</color>
    <color name="accentColor">#40C4FF</color>

    <style name="weatherTable">
        <item name="android:background">@color/tableBackgroundColor</item>
        <item name="borderColor">@color/tableBorderColor</item>
        <item name="borderWidth">@dimen/tableBorderWidth</item>
        <item name="cellPadding">@dimen/tableCellPadding</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <!-- Widget -->
    <style name="wTextBase">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="wTitle" parent="@style/wTextBase">
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wColumn" parent="@style/wTextBase">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="wHour" parent="@style/wTextBase">
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wImg">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26sp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="sectionHeader">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

</resources>
